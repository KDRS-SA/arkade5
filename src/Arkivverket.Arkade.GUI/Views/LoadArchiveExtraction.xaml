<UserControl x:Class="Arkivverket.Arkade.GUI.Views.LoadArchiveExtraction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:resources="clr-namespace:Arkivverket.Arkade.GUI.Resources"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Height="350" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="103"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource MaterialDesignTitleTextBlock}" Margin="0 6 0 8" Text="{x:StaticExtension resources:GUI.LoadArchiveViewHeadingText}"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button Margin="5" Content="{x:StaticExtension resources:GUI.LoadArchiveChooseFolderButtonText}" HorizontalAlignment="Center" Width="140" Height="31" Command="{Binding OpenArchiveFolderCommand}"/>
            <Button Margin="5" Content="{x:StaticExtension resources:GUI.LoadArchiveChooseTarFileButtonText}" HorizontalAlignment="Center" Width="140" Height="31" Command="{Binding OpenArchiveFileCommand}"/>
        </StackPanel>

        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Height="40" TextWrapping="Wrap" Text="{Binding ArchiveFileNameGuiRepresentation}" VerticalAlignment="Top" IsEnabled="False"/>

        <TextBlock Grid.Row="5" Grid.Column="1" Margin="5 20" Text="{x:StaticExtension resources:GUI.LoadArchiveChooseArchiveTypeHeadingText}" Grid.RowSpan="2" />
        <StackPanel Grid.Row="5" Grid.Column="2" Margin="5 20" Grid.RowSpan="2">
            <RadioButton Style="{StaticResource MaterialDesignRadioButton}" Margin="0 0 8 4" VerticalAlignment="Center" Content="{x:StaticExtension resources:GUI.LoadArchiveTypeFagsystem}" Command="{Binding SetArchiveTypeCommand}" CommandParameter="{x:StaticExtension resources:GUI.LoadArchiveTypeFagsystem}"/>
            <RadioButton Style="{StaticResource MaterialDesignRadioButton}" Margin="0 0 8 4" VerticalAlignment="Center" Content="{x:StaticExtension resources:GUI.LoadArchiveTypeNoark3}"    Command="{Binding SetArchiveTypeCommand}" CommandParameter="{x:StaticExtension resources:GUI.LoadArchiveTypeNoark3}"/>
            <RadioButton Style="{StaticResource MaterialDesignRadioButton}" Margin="0 0 8 4" VerticalAlignment="Center" Content="{x:StaticExtension resources:GUI.LoadArchiveTypeNoark4}"    Command="{Binding SetArchiveTypeCommand}" CommandParameter="{x:StaticExtension resources:GUI.LoadArchiveTypeNoark4}" IsEnabled="False" ToolTipService.ShowOnDisabled="True" ToolTip="{x:StaticExtension resources:GUI.LoadArchiveNoark4OptionDisabledTooltip}"/>
            <RadioButton Style="{StaticResource MaterialDesignRadioButton}" Margin="0 0 8 4" VerticalAlignment="Center" Content="{x:StaticExtension resources:GUI.LoadArchiveTypeNoark5}"    Command="{Binding SetArchiveTypeCommand}" CommandParameter="{x:StaticExtension resources:GUI.LoadArchiveTypeNoark5}"/>
        </StackPanel>

        <Button Grid.Row="7" Grid.Column="2" Margin="0,20,5,20" Content="{x:StaticExtension resources:GUI.LoadArchiveLoadArchiveButtonText}" HorizontalAlignment="Right" Width="140" Command="{Binding NavigateCommand}" Height="31" Style="{StaticResource MaterialDesignRaisedAccentButton}"/>

    </Grid>
</UserControl>
